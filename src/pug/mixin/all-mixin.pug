//- link
mixin link(href,text)
	a(href= href )= text
		block
//- link item
mixin nav-link(href,text,mod)
	li.nav-item
		a(class=`nav-link ${mod}` , href= href )= text

//- socials
mixin socials(name, url, mod)
	ul.socials
		- var socials = [{name: "fb", url: "#"},{name: "tw", url: "#"},{name: "in", url: "#"},{name:"pin",  url: "#"}];
			each social in socials
				li.socials-item
					a.socials-link(href=`${social.url}`, target="_blank")
						svg(class=`icon icon-${social.name}`)
							use(xlink:href=`assets/img/sprite/sprite.min.svg#${social.name}`)

//- subMenu
mixin subMenu(id)
	ul(id=id).subMenu
		li.subMenu-item
			a.subMenu-link(href="#") Tennis
		li.subMenu-item
			a.subMenu-link(href="#") Football
		li.subMenu-item
			a.subMenu-link(href="#") Volleyball
		li.subMenu-item
			a.subMenu-link(href="#") Rugby
		li.subMenu-item
			a.subMenu-link(href="#") Natation
		li.subMenu-item
			a.subMenu-link(href="#") Judo

//- news card template
